{
  "name": "mkdocs-frontend-build",
  "private": true,
  "scripts": {
    "build:css": "postcss overrides/assets/styles.css -o overrides/assets/styles.min.css",
    "validate:html": "html-validator --file docs --verbose",
    "minify:js": "terser overrides/assets/script.js -o overrides/assets/script.min.js",
    "test": "npm run validate:html",
    "build": "npm run build:css && npm run minify:js"
  },
  "devDependencies": {
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.0",
    "html-validator": "^5.1.18",
    "terser": "^5.31.0"
  }
}