{
  "name": "mkdocs-frontend-build",
  "private": true,
  "scripts": {
    "styles": "postcss overrides/styles.css --use autoprefixer --use cssnano -o overrides/styles.min.css",
    "js": "terser overrides/script.js -o overrides/script.min.js",
    "html": "html-minifier --collapse-whitespace --remove-comments --input-dir site --output-dir site --file-ext html",
    "build": "npm run styles && npm run js && npm run html"
  },
  "devDependencies": {
    "html-minifier": "^4.0.0",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.0",
    "terser": "^5.31.0"
  }
}
